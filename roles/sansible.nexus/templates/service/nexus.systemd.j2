[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking
LimitNOFILE={{ sansible_nexus_ulimit }}
ExecStart={{ sansible_nexus_directory_home }}/bin/nexus start
ExecStop={{ sansible_nexus_directory_home }}/bin/nexus stop
User=nexus
Restart=on-abort

[Install]
WantedBy=multi-user.target